<script type="text/javascript" >
function validate()
{
var els = document.getElementsByClassName("amount");
for (var i = 0 ; i<els.length; i++)
{
if(els[i].value<0)
{
document.getElementById("error").style.display = 'block';
return false;
}
}
}
</script>
